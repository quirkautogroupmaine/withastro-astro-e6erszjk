---
interface Props {
  location: {
    sales_phone_number?: string;
    sales_m_f_hours?: string;
    sales_sat_hours?: string;
    sales_sun_hours?: string;
    sales_view_offers_link?: string;
    sales_browse_new_inventory_link?: string;
    sales_browse_used_inventory_link?: string;
    sales_get_financing_link?: string;
    service_phone_number?: string;
    service_m_f_hours?: string;
    service_sat_hours?: string;
    service_sat_disclaimer?: string;
    service_sun_hours?: string;
    service_schedule_link?: string;
    parts_phone_number?: string;
    parts_m_f_hours?: string;
    parts_sat_hours?: string;
    parts_sun_hours?: string;
  };
}

const { location } = Astro.props;

// Helper function to format phone numbers
const formatPhoneNumber = (phone: string) => {
  if (!phone) return '';
  const cleaned = phone.replace(/\D/g, '');
  const match = cleaned.match(/^(\d{3})(\d{3})(\d{4})$/);
  if (match) {
    return `(${match[1]}) ${match[2]}-${match[3]}`;
  }
  return phone;
};
---

<div class="bg-white rounded-lg shadow-lg overflow-hidden">
  <div class="grid md:grid-cols-3 divide-y md:divide-y-0 md:divide-x divide-gray-200">
    <!-- Sales Department -->
    <div class="p-6">
      <div class="flex items-center gap-3 mb-4">
        <div class="w-10 h-10 rounded-lg bg-primary/10 flex items-center justify-center">
          <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <h3 class="text-lg font-bold text-primary">Sales Department</h3>
      </div>

      {location.sales_phone_number && (
        <a 
          href={`tel:${location.sales_phone_number.replace(/\D/g, '')}`}
          class="inline-flex items-center text-lg font-bold text-secondary hover:text-primary mb-4"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          {formatPhoneNumber(location.sales_phone_number)}
        </a>
      )}

      <div class="space-y-2 mb-6">
        {location.sales_m_f_hours && (
          <div>
            <span class="text-sm font-medium text-gray-500">Mon - Fri:</span>
            <span class="text-sm text-gray-900 ml-2">{location.sales_m_f_hours}</span>
          </div>
        )}
        {location.sales_sat_hours && (
          <div>
            <span class="text-sm font-medium text-gray-500">Saturday:</span>
            <span class="text-sm text-gray-900 ml-2">{location.sales_sat_hours}</span>
          </div>
        )}
        {location.sales_sun_hours && (
          <div>
            <span class="text-sm font-medium text-gray-500">Sunday:</span>
            <span class="text-sm text-gray-900 ml-2">{location.sales_sun_hours}</span>
          </div>
        )}
      </div>

      <div class="space-y-3">
        {location.sales_view_offers_link && (
          <a
            href={location.sales_view_offers_link}
            class="block w-full text-center px-4 py-2 bg-secondary text-white rounded-md hover:bg-secondary-light transition-colors"
          >
            View Current Offers
          </a>
        )}
        {location.sales_browse_new_inventory_link && (
          <a
            href={location.sales_browse_new_inventory_link}
            class="block w-full text-center px-4 py-2 bg-primary text-white rounded-md hover:bg-primary-dark transition-colors"
          >
            Browse New Inventory
          </a>
        )}
        {location.sales_browse_used_inventory_link && (
          <a
            href={location.sales_browse_used_inventory_link}
            class="block w-full text-center px-4 py-2 border border-primary text-primary rounded-md hover:bg-primary hover:text-white transition-colors"
          >
            Browse Used Inventory
          </a>
        )}
        {location.sales_get_financing_link && (
          <a
            href={location.sales_get_financing_link}
            class="block w-full text-center px-4 py-2 border border-secondary text-secondary rounded-md hover:bg-secondary hover:text-white transition-colors"
          >
            Get Pre-Approved
          </a>
        )}
      </div>
    </div>

    <!-- Service Department -->
    <div class="p-6">
      <div class="flex items-center gap-3 mb-4">
        <div class="w-10 h-10 rounded-lg bg-primary/10 flex items-center justify-center">
          <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z" />
          </svg>
        </div>
        <h3 class="text-lg font-bold text-primary">Service Department</h3>
      </div>

      {location.service_phone_number && (
        <a 
          href={`tel:${location.service_phone_number.replace(/\D/g, '')}`}
          class="inline-flex items-center text-lg font-bold text-secondary hover:text-primary mb-4"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          {formatPhoneNumber(location.service_phone_number)}
        </a>
      )}

      <div class="space-y-2 mb-6">
        {location.service_m_f_hours && (
          <div>
            <span class="text-sm font-medium text-gray-500">Mon - Fri:</span>
            <span class="text-sm text-gray-900 ml-2">{location.service_m_f_hours}</span>
          </div>
        )}
        {location.service_sat_hours && (
          <div>
            <span class="text-sm font-medium text-gray-500">Saturday:</span>
            <span class="text-sm text-gray-900 ml-2">{location.service_sat_hours}</span>
            {location.service_sat_disclaimer && (
              <p class="text-xs text-gray-500 mt-1">{location.service_sat_disclaimer}</p>
            )}
          </div>
        )}
        {location.service_sun_hours && (
          <div>
            <span class="text-sm font-medium text-gray-500">Sunday:</span>
            <span class="text-sm text-gray-900 ml-2">{location.service_sun_hours}</span>
          </div>
        )}
      </div>

      {location.service_schedule_link && (
        <a
          href={location.service_schedule_link}
          class="block w-full text-center px-4 py-2 bg-secondary text-white rounded-md hover:bg-secondary-light transition-colors"
        >
          Schedule Service
        </a>
      )}
    </div>

    <!-- Parts Department -->
    <div class="p-6">
      <div class="flex items-center gap-3 mb-4">
        <div class="w-10 h-10 rounded-lg bg-primary/10 flex items-center justify-center">
          <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
          </svg>
        </div>
        <h3 class="text-lg font-bold text-primary">Parts Department</h3>
      </div>

      {location.parts_phone_number && (
        <a 
          href={`tel:${location.parts_phone_number.replace(/\D/g, '')}`}
          class="inline-flex items-center text-lg font-bold text-secondary hover:text-primary mb-4"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          {formatPhoneNumber(location.parts_phone_number)}
        </a>
      )}

      <div class="space-y-2">
        {location.parts_m_f_hours && (
          <div>
            <span class="text-sm font-medium text-gray-500">Mon - Fri:</span>
            <span class="text-sm text-gray-900 ml-2">{location.parts_m_f_hours}</span>
          </div>
        )}
        {location.parts_sat_hours && (
          <div>
            <span class="text-sm font-medium text-gray-500">Saturday:</span>
            <span class="text-sm text-gray-900 ml-2">{location.parts_sat_hours}</span>
          </div>
        )}
        {location.parts_sun_hours && (
          <div>
            <span class="text-sm font-medium text-gray-500">Sunday:</span>
            <span class="text-sm text-gray-900 ml-2">{location.parts_sun_hours}</span>
          </div>
        )}
      </div>
    </div>
  </div>
</div>