---
import LocationBizDetails from '../../components/quirk_locations/LocationBizDetails.astro';

interface Props {
  title: string;
  description?: string;
  location: any;
}

const { title, description, location } = Astro.props;
---

<div class="bg-white rounded-lg shadow-lg p-8 mb-12">
  <!-- Business Info Section -->
  <div class="mb-8">
    <LocationBizDetails location={location} />
  </div>

  <!-- About Header -->
  <h2 class="text-2xl font-bold text-primary mb-4">About {title}</h2>

  <!-- About Description -->
  {description ? (
    <div class="prose max-w-none">
      <div set:html={description}></div>
    </div>
  ) : (
    <p class="text-gray-600">
      Visit {title} for exceptional service and a great selection of vehicles. Our team is committed to providing the best automotive experience for our Maine customers.
    </p>
  )}
</div>
